<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.jianajavier.gradedapplication.CourseActivity"
   >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/courses"
        android:id="@+id/course_name_text_view"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/desired"
        android:id="@+id/desired_text_view"
        android:layout_below="@+id/course_name_text_view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="12dp" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/desired_grade_text_view"
        android:textSize="13dp"
        android:layout_alignTop="@+id/acquired_grade_text_view"
        android:text="90.0"
        android:layout_alignRight="@+id/course_name_text_view"
        android:layout_alignEnd="@+id/course_name_text_view" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/required"
        android:id="@+id/required_text_view"
        android:layout_alignTop="@+id/desired_text_view"
        android:layout_centerHorizontal="true"
        android:textSize="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/required_grade_text_view"
        android:textSize="13dp"
        android:layout_alignBaseline="@+id/desired_grade_text_view"
        android:layout_alignBottom="@+id/desired_grade_text_view"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView2"
        android:text="@string/acquired"
        android:textSize="12dp"
        android:layout_alignBaseline="@+id/required_text_view"
        android:layout_alignBottom="@+id/required_text_view"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/acquired_grade_text_view"
        android:textSize="13dp"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp" />

    <GridView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gridView"
        android:layout_below="@+id/desired_grade_text_view"
        android:layout_alignParentLeft="true"
        android:numColumns="3"
        android:verticalSpacing="3dp" />

</RelativeLayout>
